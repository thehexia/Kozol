@{
    ViewBag.Title = "ChannelIndex";
}

@model List<Kozol.Models.Channel>

<h2>Channel Index</h2>

@foreach (var c in Model)
{
    <li>
        @c.Name owned by @c.Creator.Username
    </li>
}

@Html.ActionLink("ChannelJson", "ChannelList", "Channel");

@Html.ActionLink("AddChannel", "AddChannel", "Channel",
    new
    {
        Name = "test",
        CreatorId = Session["userId"],
        Created = DateTime.Now,
        Capacity = 2,
        SlowMode = false,
        AdminMode = false,
        QuietMode = false,
        InviteMode = false
    }, null);

@Html.ActionLink("Update Channel", "UpdateChannel", "Channel", new { ID = 1, Name = "new name", Mode_Admin = false, Mode_Quiet = true, Mode_Slow = true, Mode_Invite = false}, null);

@Html.ActionLink("Channel Participants", "GetChannelParticipants", "Channel", new { channelID = 1 }, null);

@Html.ActionLink("Get TestUser's Channels", "GetUserChannels", "Channel", new { username = "TestUser" }, null);

@Html.ActionLink("Channel Admins", "GetChannelAdmins", "Channel", new { channelID = 4 }, null);

@Html.ActionLink("Add Admin", "AddAdmin", "Channel", new { adminID = 1, channelID = 1 }, null);