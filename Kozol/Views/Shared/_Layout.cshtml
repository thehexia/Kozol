<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <script src="@Url.Content("~/Scripts/jquery-2.1.1.min.js")" type="text/javascript"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Közöl", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Channels", "ChannelIndex", "Channel")</li>
                        <li>@Html.ActionLink("Users", "UsersIndex", "User")</li>
                        @if ((bool)(Session["loggedIn"] ?? false)) {
                        <li>@Html.ActionLink("My Profile", "EditProfile", "User", new { }, null)</li>
                        <li>@Html.ActionLink("Friends List", "FriendsList", "Friend", new { }, null)</li>
                        <li>@Html.ActionLink("My Invites", "MyInvites", "Invite", new { }, null)</li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    @Html.Partial("../Kozol/Scripts")
    @Html.Partial("../Kozol/Login", new Kozol.Models.LoginModel())
    @Html.Partial("../Kozol/Chat")
</body>
</html>
